        {
          "name": "Create Site",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('siteId', response.site.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-CSRF-Token",
                "value": "{{csrfToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"domain\": \"example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/sites/create",
              "host": ["{{baseUrl}}"],
              "path": ["sites", "create"]
            }
          }
        },
        {
          "name": "Update Site",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-CSRF-Token",
                "value": "{{csrfToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"siteId\": \"{{siteId}}\",\n  \"domain\": \"newdomain.com\",\n  \"nickname\": \"My Awesome Blog\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/sites/update",
              "host": ["{{baseUrl}}"],
              "path": ["sites", "update"]
            }
